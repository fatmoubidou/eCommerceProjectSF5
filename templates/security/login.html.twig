{% extends 'base.html.twig' %}

{% block title %}Connexion - Caftaned{% endblock %}

{% block content %}
<div class="row w-50 m-auto justify-content-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ 'form.login.connexionAs'|trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'form.login.logoutLink'|trans }}</a>
        </div>
    {% endif %}

    <h1 class="mb-3 font-weight-normal">{{ 'form.login.connexionTitle'|trans }}</h1>

<form method="post" class="w-75">
    <div class="form-group">
        <label for="inputEmail">{{ 'form.login.email'|trans }}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>

    <div class="form-group">
        <label for="inputPassword">{{ 'form.login.password'|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="form-group">
        <button class="btn btn-primary" type="submit">
            {{ 'form.login.connexionButton'|trans }}
        </button>
    </div>

    <hr>
    <p class="text-center">Ou souhaitez-vous <a href="{{path('register')}}">cr√©er un compte</a></p>
</form>
</div>
{% endblock %}
